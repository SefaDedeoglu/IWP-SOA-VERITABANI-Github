@model IEnumerable<IWP_SOA_VERITABANI.SqlModel.Sorular>
@{
    Layout = null;
}
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <title>Tyt sorular</title>
    <link rel="stylesheet" href="~/Content/Aytsorular.css" />

    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2? family = Yeon + Sung & display = swap" rel="stil sayfası">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.1/css/all.min.css" integrity="sha512-+4zCK9k+qNFUR5X+cKL9EIR+ZOhtIloNl9GIKS57V1MyNsYpYcUrUeQc9vNfzsWfV28IaLL3i96P9sdNyeRssA==" crossorigin="anonymous" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-giJF6kkoqNQ00vy+HMDP7azOuL0xtbfIcaT9wjKHr8RbDVddVHyTfAAsrekwKmP1" crossorigin="anonymous">
    <link rel="stylesheet" href="css/global.css">
    <link rel="stylesheet" href="~/Content/main.css">
    <link rel="stylesheet" media="(max-width:500px)" href="~/Content/mobilemain.css">

</head>
<body style="background-color:orange">

    <header class="bg-gri">
        <div class="container">
            <nav id="navbar">
                <h1 class="fonts-style">SolveMe</h1>

                <ul>
                    <li><a href="/deneme/index">Home</a></li>
                    <li><a href="/deneme/sorular">Tyt</a></li>
                    <li><a href="/deneme/Aytsorular">Ayt</a></li>
                    <li><a href="/deneme/login">Login </a></li>

                </ul>
            </nav>
        </div>
    </header>

    <section id="home">
        
        <img src="~/images/tyt.PNG" style="padding-top:10px;">

    </section>


    <div class="container-fluid" id="totalgrp">



        @foreach (var item in Model)
        {
            if (item.kategoriID.Equals(1))
            {
                <div class="row" id="container">
                    <div class="spacebw">
                        @if (item.soruResim != null)
                        {
                            <img src="~/images/@item.soruResim" class="img-thumbnail">
                            <textarea class="lableforngr" disabled>@Html.DisplayFor(modelItem => item.soruOzet) </textarea>
                        }
                        else
                        {
                            <textarea class="lableforngr1" disabled>@Html.DisplayFor(modelItem => item.soruOzet) </textarea>
                        }



                        <div>
                            <ul>
                                <li>cevap sayısı:@Html.DisplayFor(modelItem => item.soruCevapSayisi)</li>
                                <hr />
                                <li>okunma sayısı:@Html.DisplayFor(modelItem => item.soruGorunme)</li>
                                <hr />
                                <li><button id="btnoval" class="btn btn-success">soruya git</button></li>

                            </ul>
                        </div>

                    </div>

                </div>
                <hr />
            }

        }






    </div>







    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>



</body>
</html>
